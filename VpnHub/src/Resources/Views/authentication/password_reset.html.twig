{% extends 'base_public.html.twig' %}

{% block content %}
<div class="max-w-md w-full bg-white rounded-xl shadow p-8">
  <h1 class="text-2xl font-bold text-indigo-700 mb-6">Nova Senha</h1>
  <form method="post" action="/password-reset">
    <input type="hidden" name="token" value="{{ token }}">
    <div class="mb-4">
      <label class="block text-gray-700 mb-2">Nova Senha</label>
      <input type="password" name="password" class="w-full border rounded px-3 py-2" required>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 mb-2">Confirme a Senha</label>
      <input type="password" name="password_confirm" class="w-full border rounded px-3 py-2" required>
    </div>
    <p class="text-sm text-gray-600 mb-4">A senha deve ter pelo menos 8 caracteres, 1 letra maiúscula, 1 número e 1 símbolo especial.</p>
    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Salvar Nova Senha</button>
  </form>
</div>
{% endblock %}
