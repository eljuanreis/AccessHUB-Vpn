{% extends 'base.html.twig' %}

{% block page_title %}Gestão de Funcionários{% endblock %}

{% block content %}
<div class="flex justify-between mb-4">
  <h2 class="text-2xl font-semibold text-indigo-700">Funcionários</h2>
  <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Novo Funcionário</button>
</div>

<input type="text" placeholder="Buscar por nome..." class="border px-3 py-2 rounded mb-4 w-full sm:w-1/3" />

<table class="min-w-full bg-white rounded-xl shadow overflow-hidden">
  <thead class="bg-indigo-100">
    <tr>
      <th class="px-4 py-2">Nome</th>
      <th class="px-4 py-2">E-mail</th>
      <th class="px-4 py-2">Administrador</th>
      <th class="px-4 py-2">Ações</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
    <tr class="border-t hover:bg-indigo-50">
      <td class="px-4 py-2">{{ user.name }}</td>
      <td class="px-4 py-2">{{ user.email }}</td>
      <td class="px-4 py-2">{{ user.is_admin ? 'Sim' : 'Não' }}</td>
      <td class="px-4 py-2">
        <input type="checkbox" name="select_user[]" value="{{ user.id }}">
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<div class="mt-4">
  <button class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Revogar</button>
  <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Ativar</button>
</div>
{% endblock %}
