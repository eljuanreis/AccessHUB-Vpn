{% if errors is defined and errors|length > 0 %}
  <div class="mb-4">
    {% for error in errors %}
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-2">
        <strong class="font-bold">Erro:</strong> {{ error }}
      </div>
    {% endfor %}
  </div>
{% endif %}

{% if warnings is defined and warnings|length > 0 %}
  <div class="mb-4">
    {% for warning in warnings %}
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-2">
        <strong class="font-bold">Aviso:</strong> {{ warning }}
      </div>
    {% endfor %}
  </div>
{% endif %}

{% if success is defined and success|length > 0 %}
  <div class="mb-4">
    {% for msg in success %}
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-2">
        <strong class="font-bold">Sucesso:</strong> {{ msg }}
      </div>
    {% endfor %}
  </div>
{% endif %}
