{% extends 'base.html.twig' %}

{% block page_title %}Configurações VPN{% endblock %}

{% block content %}
<div class="flex justify-between mb-4">
  <input type="text" placeholder="Buscar por identificador ou data..." class="border px-3 py-2 rounded w-full sm:w-1/3">
  <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Nova Configuração</button>
</div>

<table class="min-w-full bg-white rounded-xl shadow overflow-hidden">
  <thead class="bg-indigo-100">
    <tr>
      <th class="px-4 py-2">ID</th>
      <th class="px-4 py-2">Criado em</th>
      <th class="px-4 py-2">Validade</th>
      <th class="px-4 py-2">Download</th>
      <th class="px-4 py-2">Selecionar</th>
    </tr>
  </thead>
  <tbody>
    {% for config in configs %}
    <tr class="border-t hover:bg-indigo-50">
      <td class="px-4 py-2">{{ config.id }}</td>
      <td class="px-4 py-2">{{ config.created_at }}</td>
      <td class="px-4 py-2">{{ config.valid_until }}</td>
      <td class="px-4 py-2">
        <a href="/download/{{ config.id }}" class="text-indigo-600 hover:underline">Baixar</a>
      </td>
      <td class="px-4 py-2">
        <input type="checkbox" name="selected_configs[]" value="{{ config.id }}">
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<div class="mt-4">
  <button class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Excluir Selecionados</button>
</div>
{% endblock %}
